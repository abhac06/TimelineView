<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.androidpractice.abha.timelineview.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.github.vipulasri.timelineview.TimelineView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:line="@color/colorTimelineLine"
                android:paddingLeft="30dp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00"
                android:textColor="@color/colorTimelineLine"
                android:textSize="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heading 1"
                    android:textSize="20dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub heading 1"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.github.vipulasri.timelineview.TimelineView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:marker="@mipmap/ic_timeline"
                app:line="@color/colorTimelineLine"
                android:paddingLeft="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:20"
                android:textColor="@color/colorTimelineLine"
                android:textSize="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heading 2"
                    android:textSize="20dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub heading 2"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.github.vipulasri.timelineview.TimelineView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:line="@color/colorTimelineLine"
                android:paddingLeft="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:00"
                android:textColor="@color/colorTimelineLine"
                android:textSize="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heading 3"
                    android:textSize="20dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub heading 3"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.github.vipulasri.timelineview.TimelineView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:marker="@mipmap/ic_timeline"
                app:line="@color/colorTimelineLine"
                android:paddingLeft="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00"
                android:textColor="@color/colorTimelineLine"
                android:textSize="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heading 4"
                    android:textSize="20dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub heading 4"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.github.vipulasri.timelineview.TimelineView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:line="@color/colorTimelineLine"
                android:paddingLeft="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:00"
                android:textColor="@color/colorTimelineLine"
                android:textSize="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heading 5"
                    android:textSize="20dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub heading 5"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
